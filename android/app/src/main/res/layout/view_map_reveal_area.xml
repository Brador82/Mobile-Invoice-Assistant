<?xml version="1.0" encoding="utf-8"?>
<!-- Touch area for long-press and drag down gesture to reveal map -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapRevealArea"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/card_background"
    android:paddingVertical="4dp">

    <!-- Visual indicator - drag down arrows -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/reveal_indicator_bar" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvRevealHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold and drag down for map"
        android:textSize="10sp"
        android:textColor="@color/medium_gray"
        android:layout_marginTop="2dp" />

</LinearLayout>
