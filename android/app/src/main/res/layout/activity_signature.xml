<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A">

    <!-- Top Section: Signature Capture Area (1/3 of screen) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#222222">

        <!-- Left Side: Date, Customer Name, Delivered By -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="12dp">

            <!-- Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Date:"
                    android:textColor="#D4AF37"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDeliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="MM/DD/YYYY"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/underline_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp" />
            </LinearLayout>

            <!-- Customer Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name:"
                    android:textColor="#D4AF37"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Customer Name"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/underline_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Delivered By Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered By:"
                    android:textColor="#D4AF37"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDeliveredBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Driver Name"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:textSize="14sp"
                    android:background="@drawable/underline_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:inputType="textPersonName"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Clear"
                    android:textColor="#FFFFFF"
                    app:strokeColor="#D4AF37" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_gradient_optimize"
                    android:text="Accept &amp; Save"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>

        <!-- Right Side: Signature Canvas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Signature:"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <com.mobileinvoice.ocr.SignatureView
                android:id="@+id/signatureCanvas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/signature_canvas_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✕ Sign above"
                android:textColor="#888888"
                android:textSize="12sp"
                android:textAlignment="center"
                android:paddingTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D4AF37" />

    <!-- Bottom Section: Terms and Conditions (2/3 of screen) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#0D0D0D"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELIVERY ACCEPTANCE SIGN OFF"
                android:textColor="#D4AF37"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="12dp" />

            <!-- Terms Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Customer or person(s) over the age of 18 present upon delivery &amp; installation of appliances, and agree to accepting are installed correctly without any harm to the home.\n\n2. Customer or person(s) over the age of 18 was present for delivery and installation agrees that appliances, a test run/overview was provided, no damages were noted &amp; that they were installed correctly without any damage arising to the house or appliance from the use of customers old appliance hoses, and/or improperly maintained or damaged faucets/drains/valves, etc."
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Terms and Conditions Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TERMS AND CONDITIONS"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Scratch and Dent Goods -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scratch and Dent Goods:\n• All delivery sales are final. There is no return or refund on scratch or dent product, unless such item is non-repairable. Purchaser is solely responsible for appliance(s) back to the store for goods exchange.\n• Allow delivery drivers to leave if there is an issue on arrival. Claims to cash refund. Payment to the customer will be returned according to the customers Payment method of customer need deliver back up the returned goods at owner's time, not your driver during the the delivery time that my and cause issues."
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:lineSpacingExtra="3dp" />

            <!-- Warranty Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Warranty:\n• Warranty must begin within 30 days after delivery by contacting the manufacturer or call 800-905-0443. Instructions are found in the pamphlet and warranty sticker.\n• Customer is responsible for calling the customer care as soon as any issue arises within the warranty period.\n• After 30 days - Customer is still responsible for repair issues and delivery/pickup, and labor. Warranty Exceptions are found in the pamphlet. Please read it carefully to see if it applies to your situation.\n• Warranty does not cover negligence, power surges, or pest infestation."
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:lineSpacingExtra="3dp" />

            <!-- SN Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="S/N - which is the #/# on the machine, or other unique numbers as the store ref."
                android:textColor="#888888"
                android:textSize="10sp"
                android:textStyle="italic" />

            <!-- Footer Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Please refer to www.ccsarms.com or call 800-905-0443 for warranty registration."
                android:textColor="#D4AF37"
                android:textSize="11sp"
                android:textAlignment="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
