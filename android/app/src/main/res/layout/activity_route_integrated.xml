<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteIntegratedActivity">
    
    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <!-- Map Container (Top Half - Collapsible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mapCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <!-- Google Map Fragment -->
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                
                <!-- Map Overlay Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/gradient_overlay">
                    
                    <!-- Route Summary -->
                    <TextView
                        android:id="@+id/tvRouteSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:text="Calculating route..." />
                    
                    <TextView
                        android:id="@+id/tvCurrentStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:text="Next: Loading..." />
                </LinearLayout>
                
                <!-- Map Control Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:gravity="end">
                    
                    <!-- Toggle Map Size -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabToggleMapSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:src="@android:drawable/ic_menu_crop"
                        app:fabSize="mini"
                        app:tint="#FFFFFF"
                        android:contentDescription="Toggle map size" />
                    
                    <!-- Start Google Maps Navigation -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabStartNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_dialog_map"
                        app:fabSize="normal"
                        app:tint="#FFFFFF"
                        android:contentDescription="Start navigation in Google Maps" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Invoice List Container (Bottom Half) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/invoiceListCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/colorPrimary"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Stops"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    
                    <TextView
                        android:id="@+id/tvStopCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 stops"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
                
                <!-- Instructions -->
                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Drag stops to reorder • Tap to view details • Long-press for options"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="center" />
                
                <!-- Invoice RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInvoices"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    tools:listitem="@layout/item_route_invoice" />
                
                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/colorSurface"
                    android:elevation="4dp">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Save Order"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReoptimize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Re-optimize Route" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    
    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
            
            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true" />
            
            <TextView
                android:id="@+id/tvLoadingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Optimizing route..."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
